<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE3F6"
    tools:context="com.example.marthitha.trabajadores.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logout"
        android:layout_marginTop="1pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martha Karina Morales Godínez"
        android:textAlignment="center"
        android:layout_marginBottom="10pt"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingeniería en Tecnología de la Información y Comunicación"
        android:textAlignment="center"
        android:layout_marginBottom="10pt"
        android:textSize="9pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programación de Aplicaciones"
        android:textAlignment="center"
        android:layout_marginBottom="10pt"
        android:textSize="8.5pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. Control: 1214100407"
        android:textAlignment="center"
        android:textSize="8pt"/>

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar registro"
        android:textSize="30sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Inicializar BD"
        android:id="@+id/btn_inicializar_bd"
        />



</LinearLayout>